---
import '@/styles/header-nav.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import FakeLayout from '@/components/FakeLayout.astro';
const { frontmatter } = Astro.props;
const { title, pubDate, author, description, image } = frontmatter;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Markdown - {title}</title>
  </head>
  <body>
    <Header />
    <FakeLayout title={title}>
      <p>Published on: {pubDate.toString().slice(0, 10)}</p>
      <title>Markdown - {title}</title>
      <p><em>{description}</em></p>
      <p>Written by: {author}</p>
      <img src={image.url} width="300" alt={image.alt} />
    </FakeLayout>
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  import '@/scripts/menu';
</script>
